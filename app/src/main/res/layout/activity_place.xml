<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:padding="5dp"
    tools:context=".PlaceActivity"
    android:background="@color/light_blue_trand">
    <TextView
        android:id="@+id/txt_title_of_trip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:text="Title of trip"

        />
    <ImageView
        android:id="@+id/img_place"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_above="@id/txt_short_description"
        android:layout_below="@id/txt_title_of_trip"
        android:src="@drawable/preah_vihea"
        />

        <TextView
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/txt_short_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="short description here"
            android:layout_alignParentBottom="true"
            />

    

</RelativeLayout>